<!DOCTYPE html>
<html lang="en">

    <head>
        <!-- Include Analytics -->
        <%- include('partials/analytics') %>

        <!-- Include Static Meta Properties -->
        <%- include('partials/meta') %>

        <!-- Include Dynamic Meta Properties -->
        <%- include('partials/meta_dynamic') %>

        <title>Kerala Rehab | <%= promisor %></title>

        <!-- Include Styles -->
        <%- include('partials/styles') %>
        <link rel="icon" href="../asset/images/keralarehab-logo.png" type="image/png">
        <link href="../asset/css/style.css" rel="stylesheet">
        <link rel="stylesheet" href="../asset/css/offerDetails.css">
        

    </head>
    <body class="d-flex flex-column min-vh-100">
        <!-- Include Navbar -->
        <%- include('partials/navbar') %>

        <div class="container mt-4">
            <div class="card shadow-sm" id="offerContent">
                <div class="card-body">
                    <%- offerContent %>
                </div>
            </div>
            <div class="card mt-3 shadow-sm" id="progressContent">
                <div class="card-body">
                    <%- progressContent %>
                </div>
            </div>
            <div class="mt-3 d-flex justify-content-between">
                <% if (prevOfferUrl) { %>
                    <a href="../<%= prevOfferUrl %>" class="btn btn-secondary">Previous Offer</a>
                <% } else { %>
                    <span></span>
                <% } %>
                <a href="../donations.html" class="btn btn-primary">Back to Offers</a>
                <% if (nextOfferUrl) { %>
                    <a href="../<%= nextOfferUrl %>" class="btn btn-secondary">Next Offer</a>
                <% } else { %>
                    <span></span>
                <% } %>
            </div>        
        </div>

        <!-- Include Footer -->
        <%- include('partials/footer') %>

        <!-- Include Scripts -->
        <%- include('partials/scripts') %>

        <!-- Custom Script -->
        <script src="../asset/js/offerDetails.js" defer></script>

    </body>
</html>