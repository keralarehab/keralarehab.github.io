<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Offers</title>
    <!-- Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Your custom CSS -->
    <link rel="stylesheet" href="./asset/style.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Offers</h1>

        <!-- Search Bar -->
        <div class="mb-4">
            <input type="text" id="searchInput" class="form-control" placeholder="Search offers..." />
        </div>

        <!-- Offers List -->
        <div id="offersList">
            <% data.forEach(item => { %>
                <div class="card mb-3 offer-item" data-name="<%= item.promisor %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= item.promisor %></h5>
                        <p class="card-text"><strong>Promise:</strong> <%= item.promise %></p>
                        <p class="card-text"><strong>Date:</strong> <%= item.date_of_promise || 'Not Specified' %></p>
                        <p class="card-text"><strong>Details:</strong> <%= item.details %></p>
                        <a href="./offer/<%= item.slug %>-wayanad-donation.html" class="btn btn-primary">See Offer</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <!-- Search/Filter Script -->
    <script>
        document.getElementById('searchInput').addEventListener('input', function() {
            const query = this.value.toLowerCase();
            const offers = document.querySelectorAll('.offer-item');

            offers.forEach(offer => {
                const name = offer.getAttribute('data-name').toLowerCase();
                if (name.includes(query)) {
                    offer.style.display = '';
                } else {
                    offer.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>
